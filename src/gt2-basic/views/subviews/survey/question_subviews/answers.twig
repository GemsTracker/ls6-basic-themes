{% if aSurveyInfo.options.hideMarkedOptions == 'on' %}
    {% set optionsClass = 'hide-marked-options' %}
{%  else %}
    {% set optionsClass = '' %}
{% endif %}
{% if aSurveyInfo.options.smallNumericFields == 'left' %}
    {% set optionsClass = optionsClass ~ ' numbers-small numbers-left' %}
{% elseif aSurveyInfo.options.smallNumericFields == 'center' %}
    {% set optionsClass = optionsClass ~ ' numbers-small numbers-center' %}
{% elseif aSurveyInfo.options.smallNumericFields == 'right' %}
    {% set optionsClass = optionsClass ~ ' numbers-small numbers-right' %}
{% endif %}
{% if aSurveyInfo.options.subQuestionAlign == 'left' %}
    {% set optionsClass = optionsClass ~ ' sub-align-left' %}
{% elseif aSurveyInfo.options.subQuestionAlign == 'right' %}
    {% set optionsClass = optionsClass ~ ' sub-align-right' %}
{% endif %}
{% if aSurveyInfo.options.subQuestionsGrid == 'odd' %}
    {% set optionsClass = optionsClass ~ ' sub-grid-odd' %}
{% elseif aSurveyInfo.options.subQuestionsGrid == 'lines' %}
    {% set optionsClass = optionsClass ~ ' sub-grid-lines' %}
{% endif %}

<!-- Answer -->
<div class="{{ aSurveyInfo.class.answercontainer }} col-xs-12 {{ optionsClass }}" {{ aSurveyInfo.attr.answercontainer }}>
    {# NOTE: If you want to customize the question rendering, use a question theme #}
    {{ aQuestion.answer | raw }}
</div>
